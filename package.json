{
  "name": "radynamics-backend",
  "version": "2.0.0",
  "description": "Backend API for RaDynamics Cloud Platform",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "seed": "node seed.js",
    "microservices": "node start-microservices.js",
    "gateway": "cd services/api-gateway && npm run dev",
    "auth": "cd services/auth-service && npm run dev",
    "aws": "cd services/aws-service && npm run dev",
    "deploy": "cd services/deployment-service && npm run dev",
    "notify": "cd services/notification-service && npm run dev"
  },
  "dependencies": {
    "@aws-sdk/client-ec2": "^3.946.0",
    "@aws-sdk/client-ecr": "^3.490.0",
    "@aws-sdk/client-ecs": "^3.490.0",
    "@aws-sdk/client-elastic-load-balancing-v2": "^3.490.0",
    "@aws-sdk/client-ssm": "^3.946.0",
    "aws-sdk": "^2.1498.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "resend": "^6.6.0",
    "nodemailer": "^7.0.11",
    "simple-git": "^3.20.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}
